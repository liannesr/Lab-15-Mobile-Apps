<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/sensors_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/row_layout_style">

        <TextView
            android:id="@+id/light_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/luminescence"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background= "@drawable/my_rectangle"/>

        <TextView
            android:id="@+id/proximity"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/proximity"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background= "@drawable/my_rectangle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background= "@drawable/my_rectangle"
            android:layout_margin="5dp"
            android:padding="10dp">
            <TextView
                android:id="@+id/rotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accelerometer"
                android:padding="5dp"
                android:layout_margin="5dp"
                />
            <!--android:layout_margin="5dp"-->
            <!--android:padding="5dp"-->
            <TextView
                android:id="@+id/azimuth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/azimuth"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background= "@drawable/my_rectangle"/>
                <!--android:layout_margin="5dp"-->
                <!--android:padding="5dp"-->

            <TextView
                android:id="@+id/roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/roll"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background= "@drawable/my_rectangle"/>
                <!--android:layout_margin="5dp"-->
                <!--android:padding="5dp"-->
                <!--android:background= "@drawable/my_rectangle"-->
                <!--/>-->
            <TextView
                android:id="@+id/pitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pitch"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background= "@drawable/my_rectangle"/>
                <!--android:layout_margin="5dp"-->
                <!--android:padding="5dp"-->
                <!--android:background= "@drawable/my_rectangle"-->
                <!--/>-->
        </LinearLayout>
        <!--<TextView-->
            <!--android:id="@+id/rotation"-->
            <!--android:layout_marginStart="10dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/accelerometer"-->
            <!--android:layout_margin="5dp"-->
            <!--android:padding="15dp"-->
            <!--android:background= "@drawable/my_rectangle"/>-->
        <TextView
            android:id="@+id/step_count"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/steps"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background= "@drawable/my_rectangle"/>

        <TextView
            android:id="@+id/magnetic"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/magnetic"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background= "@drawable/my_rectangle"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Pressure"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background= "@drawable/my_rectangle"/>

        <TextView
            android:id="@+id/temperature"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background= "@drawable/my_rectangle"/>

    </LinearLayout>
    <Button
        android:id="@+id/button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Supported Sensor List"
        android:layout_margin="8dp"
        android:background="@drawable/row_layout_style"
        android:shadowColor="@color/colorPrimary"
        />

</LinearLayout>
